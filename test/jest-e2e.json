{
	"moduleFileExtensions": [
		"js",
		"json",
		"ts"
	],
	"rootDir": ".",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"moduleNameMapper": {
		"@app/fibonacci-stream-validator/(.*)": "<rootDir>/../libs/fibonacci-stream-validator/src/$1",
		"@app/fibonacci-stream-validator": "<rootDir>/../libs/fibonacci-stream-validator/src"
	}
}
