{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@app/fibonacci-stream-validator": [
				"libs/fibonacci-stream-validator/src"
			],
			"@app/fibonacci-stream-validator/*": [
				"libs/fibonacci-stream-validator/src/*"
			]
		}
	}
}
